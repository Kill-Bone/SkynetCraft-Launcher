{
  "name": "skynetcraft-launcher",
  "version": "1.0.3",
  "description": "SkynetCraft Unified Launcher",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "publish": "electron-builder --publish always"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/FELHASZNALONEVED/REPOD-NEVE.git"
  },
  "author": "SkynetCraft",
  "license": "ISC",
  "build": {
    "appId": "com.skynetcraft.launcher",
    "productName": "SkynetCraft Launcher",
    "directories": {
      "output": "dist"
    },
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "shortcutName": "SkynetCraft"
    },
    "publish": [
      {
        "provider": "github",
        "owner": "Kill-Bone",
        "repo": "SkynetCraft-Launcher"
      }
    ]
  },
  "dependencies": {
    "electron-updater": "^6.1.7",
    "minecraft-launcher-core": "^3.2.3"
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  }
}